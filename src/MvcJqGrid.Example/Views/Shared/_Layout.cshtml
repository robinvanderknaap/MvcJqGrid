<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>MvcJqGrid | @RenderSection("Title")</title>
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/themes/smoothness/jquery-ui-1.8.custom.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/jquery.jqGrid/ui.jqgrid.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/modernizr.custom.05850.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery-ui-1.8.11.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/i18n/grid.locale-en.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/jquery.jqGrid.min.js")" type="text/javascript"></script>
    </head>
    <body>
        <header>
            <div class="content-wrapper">
                <div class="float-left">
                    <p class="site-title">MVC jqGrid</p>
                </div>
                <div class="float-right">
                    <section id="login">
                        &nbsp;
                    </section>
                    <nav>
                        <ul id="menu">
                            <li>@Html.ActionLink("Basic", "Basic", "Home")</li>
                            <li>@Html.ActionLink("Search", "Search", "Home")</li>
                            <li>@Html.ActionLink("Default search value", "DefaultSearchValue", "Home")</li>
                            <li>@Html.ActionLink("Toolbar", "Toolbar", "Home")</li>
                            <li>@Html.ActionLink("Multiselect", "Multiselect", "Home")</li>
                            <li>@Html.ActionLink("Formatters", "Formatters", "Home")</li>
                            <li>@Html.ActionLink("Events", "Events", "Home")</li>
                            <li>@Html.ActionLink("TreeGrid", "TreeGrid", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; 2011, <a href="http://www.webpirates.nl">Webpirates</a>, The Netherlands</p>
                </div>
                <div class="float-right">
                    <ul id="social">
                        <li><a href="https://www.facebook.com/pages/Webpirates/118910158162414" class="facebook">Facebook</a></li>
                        <li><a href="http://twitter.com/allaboutoomph" class="twitter">Twitter</a></li>
                    </ul>
                </div>
            </div>
        </footer>
    </body>
</html>
